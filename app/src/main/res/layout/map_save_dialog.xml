<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:background="@drawable/style_save_map_dialog"
    android:padding="5dp"
    android:layout_gravity="center" >

    <ImageButton
        android:id="@+id/map_save_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_close_48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:focusable="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/save_map_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/style_save_map_edittext"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:drawablePadding="30dp"
            android:hint="Map title"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#777777" />
        <EditText
            android:id="@+id/save_map_city"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_save_map_edittext"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:drawablePadding="30dp"
            android:hint="City/Town"
            android:inputType="text"
            android:textColor="#000"
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="#777777" />
        <EditText
            android:id="@+id/save_map_owner"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_save_map_edittext"
            android:drawableLeft="@drawable/ic_person_24dp"
            android:drawablePadding="30dp"
            android:hint="Map Owner"
            android:inputType="text"
            android:textColor="#000"
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="#777777" />
        <EditText
            android:id="@+id/save_map_date"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_save_map_edittext"
            android:drawableLeft="@drawable/ic_date_black_24dp"
            android:drawablePadding="30dp"
            android:hint="Date DD/MM/YYYY"
            android:inputType="date"
            android:textColor="#000"
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="#777777" />
        <EditText
            android:id="@+id/save_map_description"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_save_map_textarea"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:drawablePadding="30dp"
            android:hint="Map description"
            android:inputType="text"
            android:textColor="#000"
            android:maxLines="1"
            android:padding="8dp"
            android:textColorHint="#777777" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center" >
        <Button
            android:id="@+id/map_save_cancel"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style_save_map_cancel_btn"
            android:clickable="true"
            android:focusable="true"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp" />
        <Button
            android:id="@+id/map_save_confirm"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style_save_map_confirm_btn"
            android:clickable="true"
            android:focusable="true"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>