<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/marker_bubble_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginRight="3dp"
    android:orientation="horizontal"
    android:background="@drawable/style_save_map_dialog" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:orientation="vertical" >
        <TextView android:id="@+id/marker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:textColor="#000000"
            android:maxEms="17"
            android:text="Title" />
        <TextView android:id="@+id/marker_lati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12dp"
            android:maxEms="17"
            android:text="Description" />
        <TextView android:id="@+id/marker_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12dp"
            android:maxEms="17"
            android:text="Description" />

    </LinearLayout>
    <Button android:id="@+id/marker_delete"
        android:background="@drawable/ic_cancel_red_24dp"
        android:visibility="visible"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="right" />
</LinearLayout>
