<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/polyline_polygon_bubble_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:minHeight="100dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    android:background="@drawable/style_save_map_dialog" >

    <TextView android:id="@+id/polyline_polygon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:maxEms="17"
        android:text="Title" />

    <TextView android:id="@+id/polyline_polygon_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:maxEms="17"
        android:layout_marginTop="5dp"
        android:text="Description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >
        <Button
            android:id="@+id/polyline_polygon_delete_btn"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:layout_height="25dp"
            android:background="@drawable/style_delete_btn"
            android:clickable="true"
            android:text="Delete"
            android:layout_gravity="left"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15sp"
            android:focusable="true" />
        <Button
            android:id="@+id/polyline_polygon_edit_btn"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:minWidth="80dp"
            android:background="@drawable/style_login_login_btn"
            android:clickable="true"
            android:text="Edit"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="15sp"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>
