<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditMapItemActivity"
    android:background="#fbf4ed" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Eidt Map"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:background="@color/colorFavorite" />

    <ImageButton
        android:id="@+id/map_item_back_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_arrow_back_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="71dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <EditText
            android:id="@+id/map_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_save_map_edittext"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:drawablePadding="30dp"
            android:hint="Map title"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#777777" />

        <EditText
            android:id="@+id/map_item_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_save_map_edittext"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:drawablePadding="30dp"
            android:hint="City/Town"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#777777" />

        <EditText
            android:id="@+id/map_item_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_save_map_edittext"
            android:drawableLeft="@drawable/ic_person_24dp"
            android:drawablePadding="30dp"
            android:hint="Map Owner"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#777777" />

        <EditText
            android:id="@+id/map_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_save_map_edittext"
            android:drawableLeft="@drawable/ic_date_black_24dp"
            android:drawablePadding="30dp"
            android:hint="Date DD/MM/YYYY"
            android:inputType="date"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#777777" />

        <EditText
            android:id="@+id/map_item_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_save_map_textarea"
            android:drawableLeft="@drawable/ic_edit_black_24dp"
            android:drawablePadding="30dp"
            android:hint="Map description"
            android:inputType="text"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#000"
            android:textColorHint="#777777" />
    </LinearLayout>

    <Button
        android:id="@+id/map_item_delete_btn"
        android:background="@drawable/style_save_map_cancel_btn"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:text="Delete Map"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/map_item_save_btn"
        android:background="@drawable/style_save_map_confirm_btn"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/map_item_delete_btn"
        android:layout_marginEnd="20dp"
        android:text="Save Changes"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="#fff" />
</RelativeLayout>